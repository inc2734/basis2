{
  "name": "@inc2734/basis2",
  "version": "0.14.0",
  "description": "",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/inc2734/basis2"
  },
  "files": [
    "src",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "css"
  ],
  "scripts": {
    "prepublish": "run-s build",
    "clean": "rimraf dist",
    "css:app": "sass --no-source-map src/app.scss:dist/app.css && postcss dist/app.css -r",
    "css:storybook": "sass --no-source-map src/storybook.scss:dist/storybook.css && postcss dist/storybook.css -r",
    "css": "run-p css:*",
    "js:app": "webpack ./src/app.js -o ./dist/ --output-filename app.js --config webpack.config.js",
    "js": "run-p js:*",
    "build": "run-s clean format css js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format:js": "prettier --write './src/**/*.{js,jsx}'",
    "format": "run-p format:*",
    "server": "start-storybook -p 6006",
    "public": "npm run build && build-storybook -c ./.storybook -o ./public"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/core": "^7.17.9",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/html": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@whitespace/storybook-addon-html": "^5.0.0",
    "autoprefixer": "^10.4.5",
    "babel-loader": "^8.2.5",
    "cssnano": "^5.1.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sass": "^1.51.0"
  },
  "dependencies": {}
}
